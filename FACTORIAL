// Segundo Proyecto.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include "stdlib.h"
#include <iostream>
#include <conio.h>

using namespace std;

int Factorial (int a);


void main()
{
   int a,Fact;
   do{
   cout<<"Ingrese el numero para hallar el Factorial"<<endl;
   cin>>a;
   }while(a<0);
   Fact=Factorial(a);
   cout<<"El resultado es "<<Fact;
   getch();
}


int Factorial (int a)
{ 
   int cont=1,x=1;
   for(cont=1;a>=cont;cont++)
   {
		x=x*cont;
   }
   return x;
}
